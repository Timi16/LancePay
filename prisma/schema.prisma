generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid())
  privyId          String            @unique
  email            String            @unique
  name             String?
  phone            String?
  twoFactorSecret  String?
  twoFactorEnabled Boolean           @default(false)
  backupCodes      String[]          @default([])
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  wallet           Wallet?
  bankAccounts     BankAccount[]
  invoices         Invoice[]
  transactions     Transaction[]
  reminderSettings ReminderSettings?
  apiKeys          ApiKey[]
  autoSwapRule     AutoSwapRule?
  brandingSettings BrandingSettings?
  webhooks         UserWebhook[]
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String   @unique
  address   String   @unique
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model BankAccount {
  id            String   @id @default(uuid())
  userId        String
  bankName      String
  bankCode      String
  accountNumber String
  accountName   String
  isVerified    Boolean  @default(false)
  isDefault     Boolean  @default(false)
  createdAt     DateTime @default(now())

  user          User           @relation(fields: [userId], references: [id])
  withdrawals   Transaction[]  @relation("WithdrawalBank")
  AutoSwapRule  AutoSwapRule[]
}

model Invoice {
  id            String    @id @default(uuid())
  userId        String
  invoiceNumber String    @unique
  clientEmail   String
  clientName    String?
  description   String
  amount        Decimal   @db.Decimal(10, 2)
  currency      String    @default("USD")
  status        String    @default("pending")
  paymentLink   String    @unique
  dueDate       DateTime?
  paidAt        DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user             User              @relation(fields: [userId], references: [id])
  transaction      Transaction?
  paymentReminders PaymentReminder[]
  dispute          Dispute?
  escrowEnabled           Boolean           @default(false)
  escrowStatus            String            @default("none") // none, pending, funded, released, disputed
  escrowReleaseConditions String?
  escrowReleasedAt        DateTime?
  escrowDisputedAt        DateTime?
  escrowEvents            EscrowEvent[]
}

model PaymentReminder {
  id           String   @id @default(uuid())
  invoiceId    String
  reminderType String   // 'before_due', 'on_due', 'overdue', 'manual'
  daysOffset   Int?     // e.g., -3, 0, 3. Null for manual.
  sentAt       DateTime @default(now())
  createdAt    DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model ReminderSettings {
  id             String   @id @default(uuid())
  userId         String   @unique
  enabled        Boolean  @default(true)
  beforeDueDays  Int[]    @default([3, 1])
  onDueEnabled   Boolean  @default(true)
  afterDueDays   Int[]    @default([1, 3, 7])
  customMessage  String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transaction {
  id            String    @id @default(uuid())
  userId        String
  type          String
  status        String    @default("pending")
  amount        Decimal   @db.Decimal(10, 2)
  currency      String    @default("USD")
  ngnAmount     Decimal?  @db.Decimal(15, 2)
  exchangeRate  Decimal?  @db.Decimal(10, 4)
  invoiceId     String?   @unique
  bankAccountId String?
  txHash        String?
  externalId    String?   @unique
  error         String?
  createdAt     DateTime  @default(now())
  completedAt   DateTime?
  autoSwapTriggered Boolean @default(false) // Whether this was triggered by auto-swap

  user        User         @relation(fields: [userId], references: [id])
  invoice     Invoice?     @relation(fields: [invoiceId], references: [id])
  bankAccount BankAccount? @relation("WithdrawalBank", fields: [bankAccountId], references: [id])
}

model ApiKey {
  id         String    @id @default(uuid())
  userId     String
  name       String
  keyHint    String
  hashedKey  String    @unique
  isActive   Boolean   @default(true)
  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([hashedKey])
}

model AutoSwapRule {
  id            String      @id @default(uuid())
  userId        String      @unique
  percentage    Int         // e.g., 70 (for 70%)
  bankAccountId String
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankAccount BankAccount @relation(fields: [bankAccountId], references: [id])
}

model BulkInvoiceJob {
  id           String    @id @default(uuid())
  userId       String
  status       String    @default("processing") // processing, completed, failed
  totalCount   Int
  successCount Int       @default(0)
  failedCount  Int       @default(0)
  results      Json      @default("[]")
  createdAt    DateTime  @default(now())
  completedAt  DateTime?

  @@index([userId])
}

model Dispute {
  id               String    @id @default(uuid())
  invoiceId        String    @unique
  initiatedBy      String    // 'freelancer' or 'client'
  initiatorEmail   String
  reason           String
  requestedAction  String    // 'refund', 'revision'
  status           String    @default("open") // open, resolved, closed
  resolution       String?
  resolvedBy       String?   // 'admin' or email of resolver
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  resolvedAt       DateTime?

  invoice  Invoice          @relation(fields: [invoiceId], references: [id])
  messages DisputeMessage[]

  @@index([invoiceId])
}

model DisputeMessage {
  id          String   @id @default(uuid())
  disputeId   String
  senderType  String   // 'freelancer', 'client', 'admin'
  senderEmail String
  message     String
  attachments Json     @default("[]")
  createdAt   DateTime @default(now())

  dispute Dispute @relation(fields: [disputeId], references: [id], onDelete: Cascade)

  @@index([disputeId])
}

model EscrowEvent {
  id         String   @id @default(uuid())
  invoiceId  String
  eventType  String   // e.g., 'created', 'funded', 'released', 'disputed'
  actorType  String   // 'freelancer', 'client', 'admin', 'system'
  actorEmail String
  notes      String?
  metadata   Json?    @default("{}")
  createdAt  DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
}

model BrandingSettings {
  id            String   @id @default(uuid())
  userId        String   @unique
  logoUrl       String?
  primaryColor  String   @default("#000000")
  footerText    String?
  signatureUrl  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserWebhook {
  id               String    @id @default(uuid())
  userId           String
  targetUrl        String    @db.VarChar(512)
  signingSecret    String    @db.VarChar(255)
  description      String?   @db.VarChar(100)
  isActive         Boolean   @default(true)
  subscribedEvents String[]  @default(["invoice.paid"])
  lastTriggeredAt  DateTime?
  createdAt        DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isActive])
}
